# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=securechat
DB_USER=postgres
DB_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7
JWT_ISSUER=secure-chat-api
JWT_REFRESH_SECRET=your_refresh_token_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME="SecureChat"

# Client URLs
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:5000

# Redis Configuration (for rate limiting and WebSocket)
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # Limit each IP to 100 requests per window

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self'
XSS_PROTECTION=1; mode=block
STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains; preload
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=no-referrer
PERMISSIONS_POLICY=camera=(), microphone=(), geolocation=()

# Logging
LOG_LEVEL=info

# File Uploads
MAX_FILE_UPLOAD=5
FILE_UPLOAD_PATH=./public/uploads

# Session (if using sessions)
SESSION_SECRET=your_session_secret_change_in_production

# WebSocket
WS_PATH=/ws

# 2FA
TWO_FACTOR_ISSUER=SecureChat

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000  // 15 minutes
API_RATE_LIMIT_MAX=100  // 100 requests per window

// Security Headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' ws: wss:;"
X_XSS_PROTECTION=1; mode=block
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=no-referrer
PERMISSIONS_POLICY="camera=(), microphone=(), geolocation=()"

// Logging
LOG_LEVEL=info

// File Uploads
MAX_FILE_UPLOAD=5
FILE_UPLOAD_PATH=./public/uploads

// Session (if using sessions)
SESSION_SECRET=your_session_secret_change_in_production

// WebSocket
WS_PATH=/ws

// 2FA
TWO_FACTOR_ISSUER=SecureChat
